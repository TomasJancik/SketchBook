{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "classic",
    "newLine": "LF",
    "noEmitOnError": true,
    "outDir": "js",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "ts/"
  ]
}
